class hexadeciaml:public virtual base
{
	public:
	char hexaDeciNum[100]; 
    int i = 0; 
		int n=num;
		void assign_num2()
		{
    while(n!=0) 
    {     
        int temp  = 0; 
        temp = n % 16;  
        if(temp < 10) 
        { 
            hexaDeciNum[i] = temp + 48; 
            i++; 
        } 
        else
        { 
            hexaDeciNum[i] = temp + 55; 
            i++; 
        } 
          
        n = n/16; 
    }
		} 

      
	 void display2()
	 {
     for(int j=i-1; j>=0; j--) 
        cout << hexaDeciNum[j]; 
	 }

};

